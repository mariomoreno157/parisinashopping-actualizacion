    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/txt_promociones"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/borde_redondo"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        >


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"

            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:ignore="NotSibling">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="473dp"
                    android:layout_height="20dp"
                    android:background="#CFCFCF"
                    android:translationZ="10dp">

                    <TextView
                        android:id="@+id/LblFolio"
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:text="Codigo"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/LblVendedor"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/LblNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descuento"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </TableRow>

                <ListView
                    android:id="@+id/lista_verif"
                    android:layout_width="match_parent"
                    android:layout_height="374dp"
                    android:layout_centerHorizontal="false"
                    android:background="#dfdfdf"
                    android:divider="@null"
                    android:dividerHeight="1dp"
                    android:headerDividersEnabled="false"
                    android:translationY="-50dp"
                    android:translationZ="-10dp" />
            </LinearLayout>
        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/ButtonNeedYouHelp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="Help_Tienda"
        app:layout_constraintBottom_toTopOf="@+id/txt_version"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/boton_ayuda" />

    <ImageView
        android:id="@+id/ButtonVolver"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_version"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/boton_regresar"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="atras"/>

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Edición 1.0.2 – por Gemetytec"
        android:textColor="#ffffff"
        android:background="#F1000F"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>