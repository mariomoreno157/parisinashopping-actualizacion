<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".Pedido">



    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VERIFICACIÃ“N ARTICULO | "
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:text="Por favor valida el articulo y confirma."
        android:textColor="@color/black"

        android:textSize="10sp"

        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:text="Articulo a ingresar"
        android:textColor="#F1000F"
        android:textSize="11sp"
        android:textStyle=""
        app:layout_constraintStart_toStartOf="@+id/txt_promociones"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/txt_promociones"
        android:layout_width="300dp"
        android:layout_height="80.5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/borde_redondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <HorizontalScrollView
            android:layout_width="296dp"
            android:layout_height="76dp"
            android:background="@drawable/borde_redondo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="473dp"
                    android:layout_height="20dp"
                    android:background="#CFCFCF"
                    android:translationZ="10dp">

                    <TextView
                        android:id="@+id/LblFolio"
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:text="Codigo"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/LblVendedor"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/LblNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/LblFechaRsgistro"
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </TableRow>

                <ListView
                    android:id="@+id/lista_verif"
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    android:layout_centerHorizontal="false"
                    android:background="#dfdfdf"
                    android:divider="@null"
                    android:dividerHeight="1dp"
                    android:headerDividersEnabled="false"
                    android:translationY="-50dp"
                    android:translationZ="-10dp" />
            </LinearLayout>
        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:text=""
        android:textColor="#F1000F"
        android:textSize="10sp"
        android:textStyle=""
        app:layout_constraintEnd_toEndOf="@+id/txt_promociones"
        app:layout_constraintTop_toBottomOf="@+id/txt_promociones" />







</androidx.constraintlayout.widget.ConstraintLayout>