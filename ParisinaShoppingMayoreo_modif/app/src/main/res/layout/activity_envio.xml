                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <EditText
                    android:id="@+id/edttxt_Call2"
                    android:layout_width="110dp"
                    android:layout_height="22dp"
