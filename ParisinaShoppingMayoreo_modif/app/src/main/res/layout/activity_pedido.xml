<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".Pedido">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#FFFFFF "
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="#F1000F"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/logo_parisina" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVANTAMIENTO DE PEDIDO| "
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:text="Por favor escanee o ingrese el producto a requerir."
        android:textColor="@color/black"

        android:textSize="12sp"

        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Nombre del Cliente : x x x x x"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:text="Resumen de la compra"
        android:textColor="#F1000F"
        android:textSize="12sp"
        android:textStyle=""
        app:layout_constraintBottom_toTopOf="@+id/txt_promociones"
        app:layout_constraintStart_toStartOf="@+id/txt_promociones"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/txt_promociones"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/borde_redondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" >


        <HorizontalScrollView
            android:layout_width="346dp"
            android:layout_height="146dp"
            android:background="@drawable/borde_redondo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="473dp"
                    android:layout_height="20dp"
                    android:background="#CFCFCF"
                    android:translationZ="10dp">

                    <TextView
                        android:id="@+id/LblFolio"
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:text="Codigo"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/LblVendedor"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/LblNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/LblFechaRsgistro"
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </TableRow>

                <ListView
                    android:id="@+id/lista"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="false"
                    android:background="#dfdfdf"
                    android:divider="@null"
                    android:dividerHeight="1dp"
                    android:headerDividersEnabled="false"
                    android:translationY="-50dp"
                    android:translationZ="-10dp" />
            </LinearLayout>
        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="12dp"
        android:text="Total $ :"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle=""
        app:layout_constraintStart_toStartOf="@+id/txt_promociones"
        app:layout_constraintTop_toBottomOf="@+id/txt_promociones" />

    <TextView
        android:id="@+id/costo_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:text="0 0 0"
        android:textColor="#F1000F"
        android:textSize="10sp"
        android:textStyle=""
        app:layout_constraintEnd_toEndOf="@+id/txt_promociones"
        app:layout_constraintTop_toBottomOf="@+id/txt_promociones" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Selección Productos"
        android:textColor="#F1000F"
        android:textSize="12sp"
        android:textStyle=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />


    <LinearLayout
        android:id="@+id/linearLayout0"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:orientation="vertical"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Producto: "
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/edttxt_producto"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:autofillHints=""
            android:background="#e0e0e0"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:singleLine="true"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:targetApi="o" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"

        app:layout_constraintStart_toStartOf="@+id/linearLayout1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Cantidad: "
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/edttxt_cantidad"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:enabled="false"
            android:autofillHints=""
            android:background="#e0e0e0"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="7"
            android:singleLine="true"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:targetApi="o" />
    </LinearLayout>

</LinearLayout>

    <ImageView
        android:id="@+id/ButtonAgregar"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="finalRegistro"

        app:layout_constraintStart_toStartOf="@+id/linearLayout0"

        app:layout_constraintTop_toBottomOf="@+id/linearLayout0"
        app:srcCompat="@drawable/boton_carrito" />


    <ImageView
        android:id="@+id/ButtonPagar"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="CodigoPagar"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonAgregar"
        app:srcCompat="@drawable/boton_pagar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout0"
        android:layout_width="wrap_content"
        android:layout_height="129dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout0"
        app:layout_constraintTop_toTopOf="@+id/linearLayout0">

        <ImageView
            android:id="@+id/ButtonScanProducto"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="LecturaCodigo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/boton_scan" />

        <ImageView
            android:id="@+id/BardcodeImage"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/selectableItemBackground"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ButtonScanProducto"
            app:srcCompat="@drawable/barcode_ejemplo" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/ButtonNeedYouHelp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="Help_Tienda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonPagar"

        app:srcCompat="@drawable/boton_ayuda" />

    <ImageView
        android:id="@+id/ButtonVolver"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_version"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/boton_regresar"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="atras"/>

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Edición 1.0.2 – por Gemetytec"
        android:textColor="#ffffff"
        android:background="#F1000F"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>