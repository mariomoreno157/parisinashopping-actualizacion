<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".Pedido">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF "
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="#F1000F"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/logo_parisina" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVANTAMIENTO DE PEDIDO | "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Por favor escanee o ingrese el producto a requerir."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nombre del Cliente : x x x x x"
        android:textColor="@color/black"
        android:textSize="15.5sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayoutScroll"
        android:layout_width="match_parent"
        android:layout_height="546dp"
       
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="9dp"
            android:text="Resumen de la compra"
            android:textColor="#F1000F"
            android:textSize="15sp"
            android:textStyle=""
            app:layout_constraintStart_toStartOf="@+id/txt_promociones"
            app:layout_constraintTop_toTopOf="@+id/ConstraintLayoutScroll" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/txt_promociones"
            android:layout_width="1150dp"
            android:layout_height="154dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/redondeo_sin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9">


            <HorizontalScrollView
                android:layout_width="1144dp"
                android:layout_height="149dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="1144dp"
                        android:layout_height="20dp"
                        android:background="#CFCFCF"
                        android:translationZ="10dp">

                        <TextView
                            android:id="@+id/LblFolio"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="Codigo"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/LblVendedor"
                            android:layout_width="820dp"
                            android:layout_height="wrap_content"
                            android:text="Nombre"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/LblNombre"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Cantidad"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/LblFechaRsgistro"
                            android:layout_width="114dp"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textAlignment="center"
                            android:textSize="14sp" />
                    </TableRow>


                    <ListView
                        android:id="@+id/lista"
                        android:layout_width="match_parent"
                        android:layout_height="185dp"
                        android:layout_centerHorizontal="false"
                        android:background="#dfdfdf"
                        android:divider="@null"
                        android:dividerHeight="1dp"
                        android:headerDividersEnabled="false"
                        android:nestedScrollingEnabled="true"
                        android:textSize="16sp"
                        android:translationY="-50dp"
                        android:translationZ="-10dp" />

                </LinearLayout>
            </HorizontalScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="Total $ :"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle=""
            app:layout_constraintStart_toStartOf="@+id/txt_promociones"
            app:layout_constraintTop_toBottomOf="@+id/txt_promociones" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:text="0 0 0 0 0"
            android:textColor="#F1000F"
            android:textSize="15sp"
            android:textStyle=""
            app:layout_constraintEnd_toEndOf="@+id/txt_promociones"
            app:layout_constraintTop_toBottomOf="@+id/txt_promociones" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Selección Productos"
            android:textColor="#F1000F"
            android:textSize="15sp"
            android:textStyle=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />


        <LinearLayout
            android:id="@+id/linearLayout0"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical"

            app:layout_constraintStart_toStartOf="@+id/txt_promociones"
            app:layout_constraintTop_toBottomOf="@+id/textView12">


            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Producto: "
                    android:textAlignment="center"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <EditText
                    android:id="@+id/edttxt_producto"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:autofillHints=""
                    android:background="#e0e0e0"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    tools:targetApi="o" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"

                app:layout_constraintStart_toStartOf="@+id/linearLayout1"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Cantidad: "
                    android:textAlignment="center"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <EditText
                    android:id="@+id/edttxt_cantidad"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:autofillHints=""
                    android:background="#e0e0e0"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="7"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    tools:targetApi="o" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ButtonAgregar"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="finalRegistro"

            app:layout_constraintEnd_toEndOf="@+id/linearLayout0"

            app:layout_constraintStart_toStartOf="@+id/linearLayout0"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout0"
            app:srcCompat="@drawable/boton_carrito" />


        <ImageView
            android:id="@+id/ButtonPagar"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="CodigoPagar"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ButtonAgregar"
            app:srcCompat="@drawable/boton_pagar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/txt_promociones"
            android:layout_marginEnd="95dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout0">

            <ImageView
                android:id="@+id/ButtonScanProducto"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="LecturaCodigo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/boton_scan" />

            <ImageView
                android:id="@+id/BardcodeImage"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="15dp"
                android:background="?android:attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ButtonScanProducto"
                app:srcCompat="@drawable/barcode_ejemplo" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/ButtonNeedYouHelp"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="Help_Tienda"
            app:layout_constraintBottom_toBottomOf="@+id/ConstraintLayoutScroll"

            app:layout_constraintEnd_toEndOf="parent"

            app:srcCompat="@drawable/boton_ayuda" />

        <ImageView
            android:id="@+id/ButtonVolver"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="atras"
            app:layout_constraintBottom_toBottomOf="@+id/ConstraintLayoutScroll"
            app:layout_constraintStart_toStartOf="parent"

            app:srcCompat="@drawable/boton_regresar" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presionar ENTER para pasar al siguiente campo"
            android:textColor="#ff9938"
            android:textSize="15sp"
            android:textStyle=""

            app:layout_constraintEnd_toEndOf="@+id/linearLayout0"
            app:layout_constraintStart_toStartOf="@+id/linearLayout0"
            app:layout_constraintTop_toBottomOf="@+id/ButtonAgregar" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:id="@+id/txt_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#F1000F"
            android:text="   Edición 1.0.2 – por Gemetytec"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>