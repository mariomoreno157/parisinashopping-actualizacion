<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".Pedido">

    <LinearLayout
        android:id="@+id/LL_SubTitle"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERIFICACIÓN FACTURA | "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"

            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="280dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="0dp"
            android:text="Por favor seleccione datos para su factura."
            android:textColor="@color/black"

            android:textSize="14sp"

            app:layout_constraintStart_toEndOf="@+id/textView6"
            />

    </LinearLayout>




    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:text="Datos del Cliente:"
        android:textColor="#F1000F"
        android:textSize="14sp"
        android:textStyle=""
        app:layout_constraintStart_toStartOf="@+id/txt_promociones"
        app:layout_constraintTop_toBottomOf="@+id/LL_SubTitle" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/txt_promociones"
        android:layout_width="890dp"
        android:layout_height="120.5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/borde_redondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">


        <HorizontalScrollView
            android:layout_width="884dp"
            android:layout_height="116dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="884dp"
                    android:layout_height="20dp"
                    android:background="#CFCFCF"
                    android:translationZ="10dp">

                    <TextView
                        android:id="@+id/LblFolio"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/LblVendedor"
                        android:layout_width="124dp"
                        android:layout_height="wrap_content"
                        android:text="RFC"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/LblNombre"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="Régimen"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/LblFechaRsgistro"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:text="Dirección"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>

                <ListView
                    android:id="@+id/lista_verif"
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="false"
                    android:background="#dfdfdf"
                    android:divider="@null"
                    android:dividerHeight="1dp"
                    android:headerDividersEnabled="false"
                    android:translationY="-50dp"
                    android:translationZ="-10dp"
                    android:nestedScrollingEnabled="true"/>
            </LinearLayout>
        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:text=""
        android:textColor="#F1000F"
        android:textSize="10sp"
        android:textStyle=""
        app:layout_constraintEnd_toEndOf="@+id/txt_promociones"
        app:layout_constraintTop_toBottomOf="@+id/txt_promociones" />







</androidx.constraintlayout.widget.ConstraintLayout>