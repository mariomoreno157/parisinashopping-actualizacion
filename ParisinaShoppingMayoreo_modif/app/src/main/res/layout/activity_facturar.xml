<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".Envio">


    <LinearLayout
        android:id="@+id/LL_SubTitle"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facturación | "
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Datos para su factura."
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>





        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:isScrollContainer="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LL_SubTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Razón Social: "
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <EditText
                        android:id="@+id/edttxt_Rfc"
                        android:layout_width="180dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints=""
                        android:background="#e0e0e0"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        tools:targetApi="o" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_Regimen_Check"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL_DatosAdic">

                    <TextView
                        android:id="@+id/txt_reg_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Persona: "

                        />
                    <CheckBox
                        android:id="@+id/chb_Fisica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="Persona_Tipo"
                        android:checked="false"
                        android:text="" />

                    <TextView
                        android:id="@+id/txt_FISICA_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FISICA"

                        />

                    <CheckBox
                        android:id="@+id/chb_Moral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="Persona_Tipo"
                        android:checked="false"
                        android:text="" />

                    <TextView
                        android:id="@+id/txt_MORAL_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MORAL"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_Regim"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL_Est_Mun">

                    <TextView
                        android:id="@+id/TxV_Regim"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Régimen Fiscal: "
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <Spinner
                        android:id="@+id/spinner_Regim"
                        android:layout_width="240dp"
                        android:layout_height="29dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_direccion_Check"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL_DatosAdic">

                    <TextView
                        android:id="@+id/txt_dire_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Utilizar direccion anterior?: "

                        />

                    <CheckBox
                        android:id="@+id/chb_dire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="DireAnteriorCheckbox"
                        android:checked="false"
                        android:text="" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/LL_DirecEnv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:enabled="false"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL_Email">

                    <TextView
                        android:id="@+id/txt_DirecEnv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:text="DIRECCIÓN"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_CodigoP"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_DirecEnv">

                    <TextView
                        android:id="@+id/TxV_CodigoP"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Código Postal: "
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />


                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/SvCpFact"
                        android:layout_width="90dp"
                        android:layout_height="22dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints=""
                        android:background="#e0e0e0"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        tools:targetApi="o" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_Est"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="05dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL_CodigoP">

                    <TextView
                        android:id="@+id/TxV_Est"
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13.5dp"
                        android:text="Estado: "
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />



                    <Spinner
                        android:id="@+id/spinner_Est"
                        android:layout_width="140dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="9dp"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_Est_Muni"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="05dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL_CodigoP">



                    <TextView
                        android:id="@+id/TxV_Mun"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Municipio/ \n Alcaldía: "
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />


                    <Spinner
                        android:id="@+id/spinner_Mun"
                        android:layout_width="140dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_Calle"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL_Est_Mun">

                    <TextView
                        android:id="@+id/TxV_Calle"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Calle: "
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <EditText
                        android:id="@+id/edttxt_Calle"
                        android:layout_width="180dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints=""
                        android:background="#e0e0e0"
                        android:ems="10"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        tools:targetApi="o" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_Col"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="05dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL_Calle">

                    <TextView
                        android:id="@+id/TxV_Col"
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13.5dp"
                        android:text="Colonia: "
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />


                    <Spinner
                        android:id="@+id/spinner_Coln"
                        android:layout_width="140dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_NoExt"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="05dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL_Calle">



                    <TextView
                        android:id="@+id/TxV_NoExt"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Numero \n Exterior: "
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <EditText
                        android:id="@+id/edttxt_NoExt"
                        android:layout_width="90dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints=""
                        android:background="#e0e0e0"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        tools:targetApi="o" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LL_NoInt"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL_Col_NoExt">

                    <TextView
                        android:id="@+id/TxV_NoInt"
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Numero Interior \n (opcional): "
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" />

                    <EditText
                        android:id="@+id/edttxt_NoInt"
                        android:layout_width="90dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints=""
                        android:background="#e0e0e0"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        tools:targetApi="o" />
                </LinearLayout>




