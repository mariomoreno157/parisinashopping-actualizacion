<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".Menu">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#FFFFFF "
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="#F1000F"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/logo_parisina" />


    </LinearLayout>

    <ImageView
        android:id="@+id/ButtonShopping"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="pedidos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/boton_pedidos" />

    <!--android:onClick="pedidos" -->

    <ImageView
        android:id="@+id/ButtonPromociones"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="promos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonShopping"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/boton_promos" />

    <ImageView
        android:id="@+id/ButtonIngresar"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="sitioWeb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonPromociones"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/boton_online" />


    <ImageView
        android:id="@+id/ButtonNeedYouHelp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/txt_version"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/boton_ayuda"
        android:onClick="Help_Tienda"
        />

    <ImageView
        android:id="@+id/ButtonVolver"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_version"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/boton_regresar"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="atras"/>

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Edición 1.0.2 – por Gemetytec"
        android:textColor="#ffffff"
        android:background="#F1000F"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>