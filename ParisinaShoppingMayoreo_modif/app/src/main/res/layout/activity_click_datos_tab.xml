                <EditText
                    android:id="@+id/edttxt_Call1"
                    android:layout_width="110dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="9dp"
                    android:autofillHints=""
                    android:background="#e0e0e0"
