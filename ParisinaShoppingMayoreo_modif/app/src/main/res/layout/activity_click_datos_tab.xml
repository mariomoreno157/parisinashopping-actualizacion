                    tools:targetApi="o" />

                <TextView
                    android:id="@+id/TxV_NoInt"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Numero Interior \n (opcional): "
                    android:textAlignment="textEnd"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <EditText
                    android:id="@+id/edttxt_NoInt"
                    android:layout_width="90dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:autofillHints=""
                    android:background="#e0e0e0"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    tools:targetApi="o" />
            </LinearLayout>






            <LinearLayout
                android:id="@+id/LL_TxVEntreCalles"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LL_NoInt">

                <TextView
                    android:id="@+id/TxVEntreCalles"
                    android:layout_width="248dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Entre que calles se localiza "
                    android:textAlignment="center"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
