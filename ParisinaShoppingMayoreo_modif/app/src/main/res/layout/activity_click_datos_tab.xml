            <LinearLayout
                android:id="@+id/LL_txtDatosAdic"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TxV_DatosAdic">

                <TextView
                    android:id="@+id/TxVDatosAdic"
                    android:layout_width="248dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Indicaciones adicionales de esta dirección: "
                    android:textAlignment="center"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL_Call1_Call2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_DatosAdic"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LL_txtDatosAdic">


                <EditText
                    android:id="@+id/edttxt_DatosAdic"
                    android:layout_width="280dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="0dp"
                    android:autofillHints=""
                    android:background="#e0e0e0"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"

                    android:textAlignment="center"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    tools:targetApi="o" />
            </LinearLayout>
            <!--   android:maxLength="180" -->
     <LinearLayout
          android:id="@+id/LL_Facturacion"
          android:layout_width="match_parent"
          android:layout_height="28dp"
          android:layout_marginTop="5dp"
          android:gravity="center"
          android:orientation="horizontal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/LL_DatosAdic">

          <TextView
              android:id="@+id/txt_impresora"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="¿Requiere factura?: "

              />

          <CheckBox
              android:id="@+id/chb_factura"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:checked="false"
              android:text="" />
      </LinearLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/constraint_buttons"
          android:layout_width="match_parent"
          android:layout_height="120dp">

        <ImageView
              android:id="@+id/ButtonActualizar"
              android:layout_width="170dp"
